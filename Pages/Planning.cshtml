            priority: 'high',
            status: 'completed',
            progress: 100,
            operations: [
                { id: 1, name: 'Подготовка материалов', status: 'completed', personnel: 'Иванов А.П.', hours: { planned: 8, actual: 8 }, reason: '' },
                { id: 2, name: 'Проведение инструктажа', status: 'completed', personnel: 'Петрова С.И.', hours: { planned: 16, actual: 16 }, reason: '' },
                { id: 3, name: 'Тестирование персонала', status: 'completed', personnel: 'Иванов А.П.', hours: { planned: 8, actual: 8 }, reason: '' }
            ]
        },
        {
